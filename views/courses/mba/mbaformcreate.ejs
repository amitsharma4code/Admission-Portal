<%-include('../header.ejs')%>

<section>
    <section id="registration">
        <div class="container">
            <h1 class="text-center pt-5">MBA Registration Form</h1>
            <h1 class="text-center text-uppercase pb-2" style="color:#ed5a25;">Do Register!</h1>
            <p class="text-center" style="color: #fff; background-color: #35b9dd;">In Case any query, Kindly Contact: 7974978812</p>
            <div class="row ">
             <div class="col-lg-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="c1.png" class="d-block w-100" alt="..." style="height: 65vh;">
                      </div>
                      <div class="carousel-item">
                        <img src="c2.jpg" class="d-block w-100" alt="..."style="height: 65vh;">
                      </div>
                      <div class="carousel-item">
                        <img src="c3.webp" class="d-block w-100" alt="..." style="height: 65vh;">
                      </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>
                </div>
                   <!-- Slider Div end --> 
                <div class="col-lg-6">
                    <form action="/mbaforminsert" method="post" enctype="multipart/form-data">
                        <!-- <input type="text" name="user_id" value="63fef8ace882c45419026c2d"> -->
                        <div class="mb-3 mt-1">
                            <label class="mb-2">Username:</label>
                            <input type="text" name="name" value="<%=n%>" class="form-control enter_name" placeholder="Enter name" style="border:1px solid #35b9dd">
                        </div>
                        <div class="mb-3">
                            <label class="mb-2">Email:</label>
                            <input type="email" name="email" value="<%=email%>" class="form-control" placeholder="Enter Email" style="border-radius: 25px; border:1px solid #35b9dd">
                        </div>
                        <div class="mb-3">
                            <label class="mb-2">Mobile No.</label>
                            <input type="number" name="number" class="form-control" placeholder="Enter Mobile Number" style="border-radius: 25px; border:1px solid #35b9dd">
                        </div>
                        <div class="mb-3">
                            <label class="mb-2">D.O.B:</label>
                            <input type="date" name="dob" class="form-control" style="border-radius: 25px; border:1px solid #35b9dd;">
                        </div>
                        <div class="mb-3 ">
                            <label class="mb-2">Gender</label>
                            <br>
                            <input type="radio" name="gender" value="male">&nbsp;Male
                            <input type="radio" name="gender" value="female">&nbsp;Female
                            <br>
                        </div>
                        <div class="mb-3">
                            <label>Address:</label>
                            <textarea class="form-control" name="address" style="border-radius: 25px; border:1px solid #35b9dd"></textarea>
                        </div>
                        <div class="mb-3">
                            <label>Select College</label>
                            <select name="college" class="form-control" style="border-radius: 25px; border:1px solid #35b9dd">
                                <option>Select</option>
                                <option>MITS</option>
                                <option>RJIT</option>
                                <option>ITM</option>
                                <option>NITM</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Course</label>
                            <select name="course" class="form-control" style="border-radius: 25px; border:1px solid #35b9dd">
                                <option>Select</option>
                                <option>MBA</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Branch</label>
                            <select name="branch" class="form-control" style="border-radius: 25px; border:1px solid #35b9dd">
                                <option>Select</option>
                                <option>CSE</option>
                                <option>IT</option>
                                <option>EC</option>
                                <option>ET</option>
                                <option>ME</option>
                                <option>EE</option>
                            </select>
                        </div>
                        <div class="text-center ">
                            <button class="btn my-4" style="background-color: #35b9dd; color:#fff;" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>



<%-include('../footer.ejs')%>